@model IEnumerable<Prog6_Eindopdracht.ASP.Models.TamagotchiModel>

@{
    ViewBag.Title = "Overview";
}

<h2>Tamagotchi overview</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Health)
        </th>
        <th></th>
    </tr>
    
 @foreach (var item in Model)
 {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Health)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { item.ID}) |
            @Html.ActionLink("Delete", "Delete", new { item.ID }) 
        </td>
    </tr>
 }   
    
 
</table>

